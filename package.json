{
  "name": "esp-js-ui",
  "version": "0.1.1",
  "description": "ESP-JS-UI Package",
  "main": "dist/esp-js-ui.js",
  "typings": "definitions/index.d.ts",
  "author": "Dev Shop Limited",
  "license": "Apache-2.0",
  "repository": "https://github.com/esp/esp-js-ui",
  "scripts": {
    "build-dev": "export NODE_ENV=dev&& webpack --display-reasons --display-error-details",
    "build-dev-for-example": "export NODE_ENV=prod&& webpack --display-reasons --display-error-details && yarn pack && rm -rf ./examples/module-based-app/node_modules/esp-js-ui && mkdir ./examples/module-based-app/node_modules/esp-js-ui && tar -xzf esp-js-ui-v0.1.0.tgz -C ./examples/module-based-app/node_modules/esp-js-ui --strip 1",
    "build-prod": "export NODE_ENV=prod&& webpack --display-reasons --display-error-details",
    "start": "webpack --watch",
    "test": "jest"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js"
    }
  },
  "devDependencies": {
    "awesome-typescript-loader": "^3.1.2",
    "clean-webpack-plugin": "^0.1.16",
    "copy-webpack-plugin": "^4.0.1",
    "expect": "^1.20.2",
    "jest": "^19.0.2",
    "script-loader": "0.7.0",
    "sinon": "1.17.4",
    "ts-jest": "^19.0.8",
    "tslint": "3.15.1",
    "tslint-loader": "2.1.5",
    "typescript": "^2.2.2",
    "typings": "1.5.0",
    "webpack": "^2.3.3",
    "webpack-fail-plugin": "^1.0.6"
  },
  "dependencies": {
    "@types/uuid": "2.0.29",
    "classnames": "2.2.5",
    "esp-js": "^1.3.0",
    "esp-js-react": "0.1.6",
    "microdi-js": "^1.1.0",
    "query-string": "^4.3.2",
    "react": "15.3.2",
    "rx": "4.1.0",
    "uuid": "3.0.1"
  }
}
